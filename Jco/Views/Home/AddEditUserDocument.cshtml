@model CommonUtility.UserDocumentModel
@{
    ViewBag.Title = "AddEditUserDocument";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                @*<h3 class="m-subheader__title m-subheader__title--separator">
                        Add Edit UserDocument
                    </h3>*@
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="@Url.Action("Dashboard","Home")" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">
                        -
                    </li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">
                                Add Edit UserDocument
                            </span>
                        </a>
                    </li>


                </ul>
            </div>

        </div>
    </div>
    <!-- END: Subheader -->
    <div class="m-content">
        <div class="row">
            <div class="col-lg-12">

                <!--begin::Portlet-->
                <div class="m-portlet">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <span class="m-portlet__head-icon m--hide">
                                    <i class="la la-gear"></i>
                                </span>
                                <h3 class="m-portlet__head-text">
                                    UserDocument Form
                                </h3>
                            </div>
                        </div>
                    </div>
                    <!--begin::Form-->
                    @using (Html.BeginForm("AddEditUserDocument", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" }))
                    {
                        @Html.HiddenFor(x => x.UserDocumentId)
                         @Html.HiddenFor(x => x.DocType)
                        @*<form class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">*@
                        <div class="m-portlet__body">
                            <div class="form-group m-form__group row">
                                <label class="col-lg-2 col-form-label">
                                    Document Name :
                                </label>
                                <div class="col-lg-3">
                                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control m-input", @Placeholder = "Document Name", @required = "Required" })
                                </div>
                                <label class="col-lg-2 col-form-label">
                                    Description:
                                </label>
                                <div class="col-lg-5">
                                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control m-input", @Placeholder = "", @required = "Required" })
                                </div>
                                <label class="col-lg-2 col-form-label">
                                   Document :
                                </label>
                                <div class="col-lg-3">
                                    <input type="file" name="file" id="file" />
                                </div>

                                <label class="col-lg-1 col-form-label">
                                    IsActive:
                                </label>
                                <div class="col-lg-3">
                                    @Html.CheckBoxFor(x => x.IsActive, new { @class = "" })
                                </div>
             
                            </div>

                        </div>
                        <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                            <div class="m-form__actions m-form__actions--solid">
                                <div class="row">
                                    <div class="col-lg-5"></div>
                                    <div class="col-lg-7">
                                        <button type="submit" class="btn btn-brand">
                                            Submit
                                        </button>
                                        <a href="@Url.Action("Document", "Home")" class="btn btn-secondary">
                                            Cancel
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*</form>*@
                    }
                    <!--end::Form-->
                </div>
                <!--end::Portlet-->
            </div>
        </div>
    </div>
</div>
