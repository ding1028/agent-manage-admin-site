@model CommonUtility.DutyModel
@{
    ViewBag.Title = "AddEditDuty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<script src="../../../assets/demo/default/custom/components/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>*@
<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                @*<h3 class="m-subheader__title m-subheader__title--separator">
                    Add Edit Duty
                </h3>*@
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="@Url.Action("Dashboard","Home")" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">
                        -
                    </li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">
                                Add Edit Duty
                            </span>
                        </a>
                    </li>


                </ul>
            </div>

        </div>
    </div>
    <!-- END: Subheader -->
    <div class="m-content">
        <div class="row">
            <div class="col-lg-12">

                <!--begin::Portlet-->
                <div class="m-portlet">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <span class="m-portlet__head-icon m--hide">
                                    <i class="la la-gear"></i>
                                </span>
                                <h3 class="m-portlet__head-text">
                                    Duty Form
                                </h3>
                            </div>
                        </div>
                    </div>
                    <!--begin::Form-->
                    @using (Html.BeginForm("AddEditDuty", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" }))
                    {
                        @Html.HiddenFor(x => x.DutyId)
                        @*<form class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">*@
                        <div class="m-portlet__body">
                            <div class="form-group m-form__group row">
                                @*<label class="col-lg-1 col-form-label">
                                    Agent:
                                </label>
                                <div class="col-lg-3">
                                    @Html.DropDownListFor(x => x.AgentId, Model.ListAgent, "Select", new { @class = "form-control m-input", @required = "Required" })
                                </div>*@
                                <label class="col-lg-1 col-form-label">
                                    Roadshow Code:
                                </label>
                                <div class="col-lg-3">
                                    @Html.TextBoxFor(x => x.RoadshowCode, new { @class = "form-control m-input", @Placeholder = "Road show Code" })
                                </div>
                                <label class="col-lg-1 col-form-label">
                                    Location:
                                </label>
                                <div class="col-lg-3">
                                    @Html.TextBoxFor(x => x.Location, new { @class = "form-control m-input", @Placeholder = "Location", @required = "Required", @Id = "Email" })
                                </div>
                                <label class="col-lg-1 col-form-label">
                                    Date From:
                                </label>
                                <div class="col-lg-3">
                                    @Html.TextBoxFor(x => x.DateFromStr, "{0:dd/MM/yyyy}", new { @class = "form-control m-input", @required = "Required", @type = "date" })
                                </div>
                                <label class="col-lg-1 col-form-label">
                                    Date To:
                                </label>
                                <div class="col-lg-3">
                                    @Html.TextBoxFor(x => x.DateToStr, "{0:dd/MM/yyyy}", new { @class = "form-control m-input", @required = "Required", @type = "date" })
                                </div>
                                <label class="col-lg-1 col-form-label">
                                    Description:
                                </label>
                                <div class="col-lg-3">
                                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control m-input", @Placeholder = "Description", @required = "Required" })
                                </div>

                            </div>
                            <div class="form-group m-form__group row">

                            
                                <label class="col-lg-1 col-form-label">
                                    Cost:
                                </label>
                                <div class="col-lg-3">
                                    @Html.TextBoxFor(x => x.Cost, new { @class = "form-control m-input", @placeholder = "Cost", @type = "number", @min = "0", @required = "Required" })
                                </div>

                            </div>

                        </div>
                        <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                            <div class="m-form__actions m-form__actions--solid">
                                <div class="row">
                                    <div class="col-lg-5"></div>
                                    <div class="col-lg-7">
                                        <button type="submit" class="btn btn-brand">
                                            Submit
                                        </button>
                                        <a href="@Url.Action("Duty", "Home")" class="btn btn-secondary">
                                            Cancel
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*</form>*@
                    }
                    <!--end::Form-->
                </div>
                <!--end::Portlet-->
            </div>
        </div>
    </div>
</div>
