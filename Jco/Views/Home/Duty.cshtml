@model CommonUtility.DutyModel
@{
    ViewBag.Title = "Duty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                @*<h3 class="m-subheader__title m-subheader__title--separator">
                    Duty Table
                </h3>*@
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="@Url.Action("Dashboard","Home")" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">
                        -
                    </li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">
                                Duty
                            </span>
                        </a>
                    </li>


                </ul>
            </div>

        </div>
    </div>
    <!-- END: Subheader -->
    <div class="m-content">

        <div class="m-portlet m-portlet--mobile">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Duty table
                        </h3>
                    </div>
                </div>

            </div>
            <div class="m-portlet__body">
                <!--begin: Search Form -->
                <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                    <div class="row align-items-center">
                        <div class="col-xl-8 order-2 order-xl-1">
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-4">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input m-input--solid" placeholder="Search..." id="generalSearch">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                            <span>
                                                <i class="la la-search"></i>
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                        @if (Convert.ToBoolean(Session["Add"]))
                        {
                               
                            <a href="@Url.Action("AddEditDuty","Home")" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                                <span>
                                    <i class="la la-cart-plus"></i>
                                    <span>
                                        Create New Duty
                                    </span>
                                </span>
                            </a>
                          }
                            <div class="m-separator m-separator--dashed d-xl-none"></div>
                        </div>
                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <table class="m-datatable" id="html_table" width="100%">
                    <thead>
                        <tr>
                            <th title="Field #1">
                                Road show Code
                            </th>
                            <th title="Field #1">
                                Location
                            </th>

                            <th title="Field #3">
                                Duty From
                            </th>
                         
                            <th title="Field #3">
                               Cost
                            </th>
                        
                            <th title="Field #4">
                                Action
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DutyList)
                        {
                            <tr>
                                <td>
                                    @item.RoadshowCode
                                </td>
                                <td>
                                    @item.Location
                                </td>
                                <td>
                                    @item.DateFrom.ToString("yyyy-MM-dd")  - @item.DateTo.ToString("yyyy-MM-dd")
                                </td>

                              
                                <td>
                                    @item.Cost
                                </td>
                              
                                <td>
                                    @if (Convert.ToBoolean(Session["Edit"]))
                                    {
                                          <a href="@Url.Action("AddEditDuty", "Home", new { @id=item.DutyId })"><i class="la la-edit"></i></a>
                                           <a href="@Url.Action("AssignDuty", "Home", new { @id=item.DutyId })"> |  Assign Agent</a>
                                    }
                                    
                                  
                                </td>

                            </tr>
                        }




                    </tbody>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </div>
</div>
